{
  "env": {
      "browser": true,
      "es2022": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
  },
  "rules": {
      "no-unused-vars": "warn",
      "no-undef": "error",
      "no-console": ["warn", { "allow": ["warn", "error"] }],
      "prefer-const": "warn",
      "prefer-promise-reject-errors": "warn"
  },
  "globals": {
      "THREE": "readonly"
  }
}